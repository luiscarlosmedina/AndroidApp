<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 1. Imagen Representativa de Perfil -->
        <ImageView
            android:id="@+id/perfilImagen"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/imagen_de_perfil"
            android:rotation="-90"
            android:src="@drawable/iconuser" />

        <!-- 2. Visualización de nombres -->
        <!-- Nombre -->
        <TextView android:id="@+id/viewPerfilNombre" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/nombre" android:textAlignment="center"/>
        <EditText android:id="@+id/editPerfilNombre" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/nombre" android:visibility="gone" android:textAlignment="center" style="@style/EditTextRounded" android:textColor="@color/orange" />

        <!-- Edad -->
        <TextView android:id="@+id/viewPerfilEdad" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/edad" android:textAlignment="center"/>
        <EditText android:id="@+id/editPerfilEdad" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/edad" android:inputType="number" android:visibility="gone" android:textAlignment="center" style="@style/EditTextRounded" android:textColor="@color/orange"/>

        <!-- Correo -->
        <TextView android:id="@+id/viewPerfilCorreo" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/correo" android:textAlignment="center"/>
        <EditText android:id="@+id/editPerfilCorreo" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/correo" android:inputType="textEmailAddress" android:visibility="gone" android:textAlignment="center" style="@style/EditTextRounded" android:textColor="@color/orange"/>

        <!-- Programa académico -->
        <TextView android:id="@+id/viewPerfilPrograma" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/programa_acad_mico" android:textAlignment="center"/>
        <EditText android:id="@+id/editPerfilPrograma" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/programa_acad_mico" android:visibility="gone" android:textAlignment="center" style="@style/EditTextRounded" android:textColor="@color/orange"/>

        <!-- Semestre -->
        <TextView android:id="@+id/viewPerfilSemestre" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/semestre" android:textAlignment="center"/>
        <EditText android:id="@+id/editPerfilSemestre" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/semestre" android:inputType="number" android:visibility="gone" android:textAlignment="center" style="@style/EditTextRounded" android:textColor="@color/orange"/>


        <!-- 6. Botón de Editar -->
        <Button
            android:id="@+id/perfilBtnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/orange"
            android:fontFamily="sans-serif-light"
            android:text="@string/editar"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

    </LinearLayout>
</ScrollView>