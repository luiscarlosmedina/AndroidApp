<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconAppRegister"
                    android:layout_width="117dp"
                    android:layout_height="106dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/iconlogo" />

                <TextView
                    android:id="@+id/nameAppRegister"
                    android:layout_width="207dp"
                    android:layout_height="61dp"
                    android:fontFamily="@font/agbalumo"
                    android:text="@string/app_name"
                    android:textColor="@color/blue"
                    android:textSize="34sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/infoRegistro"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/etNombres"
                style="@style/EditTextRounded"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="15dp"
                android:hint="Nombres" />

            <EditText
                android:id="@+id/etApellidos"
                style="@style/EditTextRounded"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="10dp"
                android:hint="Apellidos" />

            <EditText
                android:id="@+id/etCorreo"
                style="@style/EditTextRounded"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:hint="Correo Electrónico"
                android:inputType="textEmailAddress"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/etTelefono"
                style="@style/EditTextRounded"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:hint="Teléfono"
                android:inputType="phone"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/etContrasena"
                style="@style/EditTextRounded"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/etRepetirContrasena"
                style="@style/EditTextRounded"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:hint="Repetir Contraseña"
                android:inputType="textPassword"
                android:layout_marginTop="10dp" />

            <CheckBox
                android:id="@+id/checkTerminos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/conditions"
                android:textColor="@color/blue" />

            <Button
                android:id="@+id/btnRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/orange"
                android:fontFamily="sans-serif-light"
                android:text="@string/login"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
