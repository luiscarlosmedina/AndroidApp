<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:fillViewport="true"> <!-- Esto asegura que el contenido rellene el Ã¡rea visible -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- 1. Logo de la App -->
        <ImageView
            android:id="@+id/logoAppHome"
            android:layout_width="196dp"
            android:layout_height="173dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/iconlogo" />

        <!-- 2. Bienvenida -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/historico"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="20dp"/>

        <!-- 3. Mensaje adicional -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mensaje_inicio_fragment"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>
