<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profileIconoApp"
                android:layout_width="117dp"
                android:layout_height="106dp"
                android:layout_marginEnd="34dp"
                android:src="@drawable/iconlogo" />

            <TextView
                android:id="@+id/profileNombreApp"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agbalumo"
                android:text="@string/app_name"
                android:textColor="@color/blue"
                android:textSize="34sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 1. Imagen Representativa de Perfil -->
        <ImageView
            android:id="@+id/perfilImagen"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Imagen de perfil"
            android:rotation="-90"
            android:src="@drawable/iconuser" />

        <!-- 2. Visualización de nombres -->
        <TextView
            android:id="@+id/perfilNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 3. Visualización de apellidos -->
        <TextView
            android:id="@+id/perfilApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!-- 4. Visualización de correo electrónico -->
        <TextView
            android:id="@+id/perfilCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- 5. Visualización de número de teléfono -->
        <TextView
            android:id="@+id/perfilTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- 6. Botón de Editar -->
        <Button
            android:id="@+id/perfilBtnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/orange"
            android:fontFamily="sans-serif-light"
            android:text="@string/editar"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

    </LinearLayout>
</ScrollView>

